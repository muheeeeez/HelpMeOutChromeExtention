{
  "manifest_version": 3,
  "name": "Weather App ",
  "version": "1.0",
  "description": "Get real-time weather updates, forecasts, and alerts directly in your browser.",
  "action": {
    "default_popup": "index.html",
    "icons": { "16": "icon-16.png", "48": "icon-48.png", "128": "icon-128.png" }
  },
  "permissions": ["geolocation"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
