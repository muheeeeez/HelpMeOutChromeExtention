{
  "manifest_version": 3,
  "name": "Weather App ",
  "version": "1.0",
  "description": "Get real-time weather updates, forecasts, and alerts directly in your browser.",
  "icons": {
    "16": "public/images/icon-16.png",
    "48": "public/images/icon-48.png",
    "128": "public/images/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icons": {
      "16": "public/images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["geolocation", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
